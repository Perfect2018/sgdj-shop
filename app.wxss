/**app.wxss**/
.shop-off{
  filter: grayscale(100%)
}
radio {
  transform: scale(0.7);
  vertical-align: 4rpx;
}

checkbox {
  transform: scale(0.7);
  vertical-align: 4rpx;
}

button::after {
  border: none;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.header {
  width: 100%;
  min-height: 400rpx;
  background: #fdad00;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  padding-top: 20rpx;
}

.hr {
  width: 100%;
  background-color: #eee;
  height: 1rpx;
}

.flex-start {
  display: flex;
  justify-content: flex-start;
}

.color-aaa {
  color: #aaa;
}
