/* components/popup/index.wxss */

.wx-popup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 3;
}

.popup-container {
  position: fixed;
  left: 50%;
  top: 50%;
  width: 80%;
  max-width: 600rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%);
  overflow: hidden;
  background: #fff;
}

.wx-popup-title {
  width: 100%;
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  box-sizing: border-box;
}

.wx-popup-con {
  margin: 60rpx 10rpx;
  text-align: center;
  box-sizing: border-box;
  color: #999;
}

.wx-popup-btn {
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-around;
  box-sizing: bordre-box;
}

.wx-popup-btn .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: bordre-box;
  width: 50%;
  height: 110rpx;
  font-weight: inherit;
  background-color: #fff;
}

.confirm, .userInfo {
  color: #fdad00;
}

.border-l-f5f5f5 {
  border-left: 1rpx solid #f5f5f5;
}
