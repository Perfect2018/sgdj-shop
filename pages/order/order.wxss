/* pages/order/order.wxss */

.content {
  display: flex;
  margin: 20rpx 0;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.content .input {
  padding: 20rpx 10rpx;
  width: 100%;
}

.order {
  width: 100%;
  min-height: 200rpx;
  background: #fdad00;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  position: relative;
}

.order-btn{
  width: 150rpx;
  height: 60rpx;
  border-radius: 10rpx;
  background-color: #fdad00;
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  right: 40rpx;
  top: 30rpx;
  font-size: 30rpx;
  border: 2rpx solid #fff;
}

.goodsDate {
  width: 96%;
  margin-left: 2%;
  border-top: 1rpx solid #fff;
  margin-top: 60rpx;
  padding-top: 20rpx;
}

.goods_type {
  width: 100%;
  display: flex;
  justify-content: space-around;
  box-sizing: border-box;
  margin-top: 10rpx;
  padding: 0 20rpx;
}

.goods_type .btn {
  background-color: #ccc;
  width: 40%;
  text-align: center;
  font-size: 30rpx;
  padding: 20rpx;
  margin: 0;
  border-radius: 10rpx;
  border-color: #ccc;
  color: #fff;
}

.goods_type .active {
  background: #fdad00;
  color: #fff !important;
}

.order_state {
  width: 100%;
  padding-left: 5%;
  padding-right: 5%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;

}

.timely_order {
  font-size: 30rpx;
  margin-top: 40rpx;
  display: inline-block;
  text-align: center;
  padding-bottom: 20rpx;
}

.timely_order {
  width: 22%;
}

.active {
  border-bottom: 1rpx solid #fdad00;
}

.orderList {
  width: 94%;
  padding: 0 3%;
}

.item {
  font-size: 26rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.item-checked {
  width: 0;
  transition: all 0.5s linear;
  position: relative;
  opacity: 0;
  line-height: 55rpx;
  padding: 20rpx 0;
}

.item-checked-o {
  padding: 20rpx 0;
  width: 5%;
  opacity: 1;
  transition: all 0.5s linear;
  position: relative;
  line-height: 55rpx;
}

.item-detail-o {
  width: 90%;
  transition: all 0.5s linear;
  float: right;
}

.item-detail {
  transition: all 0.5s linear;
  width: 100%;
  float: right;
}

.between {
  width: 100%;
  display: flex;
  justify-content: space-between;
  color: #aaa;
  padding: 10rpx 0;
}

.line {
  color: #aaa;
  padding: 10rpx 0;
  display: flex;
}

.line-right {
  max-width: 545rpx;
}

.orderNum .first {
  font-size: 26rpx;
  color: #000;
  font-weight: bold;
}

.orderNum .last {
  color: #fdad00;
}

.cust_title {
  padding-bottom: 10rpx;
  color: #fdad00;
  font-size: 28rpx;
}

.cust_name {
  color: #aaa;
}

.hr {
  margin: 10rpx 0;
}

.btns {
  height: 72rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}

/* .btn{
  
} */

.btn {
  height: 40rpx;
  margin-top: 10rpx;
  margin-right: 30rpx;
  background-color: #fff;
  border: 1rpx solid #fdad00;
  color: #fdad00;
  padding: 10rpx 20rpx;
}

.btn-l {
  background-color: #fdad00;
  color: #fff;
}
.btn-2{
  background-color: #aaa;
  color:#fff;
  border-color: #aaa
}
.btn-p {
  background-color: #fff;
  color: #fdad00;
}

.fixedOrder {
  position: fixed;
  /* width: 150rpx; */
  padding: 10rpx 20rpx;
  left: 0;
  bottom: 200rpx;
  font-size: 28rpx;
  color: #000;
  border: 1rpx solid #fdad00;
  border-left: none;
  background-color: #fdad00;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  text-align: center;
}