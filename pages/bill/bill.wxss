/* pages/bill/bill.wxss */
page{
  height: 100%;
  background-color: #fff;
}

page>view{
  height: 100%;
  background-color: #fff;
}

.tabs{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: nowrap;
  font-size: 28rpx;
  margin-top: 10rpx;
  box-sizing: border-box;
}

.tabs>view:first-child{
  width: 250rpx;
  text-align: center;
}

.tabs>view{
  width: 100rpx;
  text-align: center;
}

.detail{
  height: 70rpx;
  font-size: 23rpx;
  color: #a9a9a9;
  line-height: 70rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.detail>view{
  height: 100%;
  width: 100rpx;
  text-align: center;
  padding-left: 5rpx;
  box-sizing: border-box;
}

.detail>view:first-child{
  width: 250rpx;
  text-align: start;
}

.detail view.order,.detail view.income{
  color: red;
}

.detail view.expend{
  color: #32CD32;
}