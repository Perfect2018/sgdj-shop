/* Pages/shopSetting/shopSetting.wxss */
.content {
  display: flex;
  margin: 20rpx 0;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.content .input {
  padding: 20rpx 10rpx;
  width: 100%;
}

.note {
  color: #fdad00;
  font-weight: bold;
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
}

.ad-img-item {
  width: 100%;
  margin: 10rpx 0;
  position: relative;
  text-align: center;
}

.ad-img-item-x {
  border-radius: 10rpx;
  border: 1rpx dotted #fdad00;
  box-sizing: border-box;
  font-size: 60rpx;
  color: #fdad00;
  line-height: 180rpx;
  text-align: center;
  margin: 10rpx auto 0;
}

.ad-img-item-o {
  width: 100%;
  height: 180rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
}

.ad-btn {
  width: 90%;
  border: 1rpx dotted #fdad00;
  color: #fdad00;
  background-color: #fff;
}

.ad-img-del {
  width: 40rpx;
  height: 40rpx;
  border: 50%;
  position: absolute;
  right: -20rpx;
  top: 35rpx;
}

.shopLogo {
  float: right;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin: 5rpx 0;
  border: 2px solid #eee;
}

.shopLogo-x {
  text-align: center;
  color: #fdad00;
  float: right;
  width: 100rpx;
  height: 100rpx;
  border: 4rpx dotted #fdad00;
  border-radius: 50%;
  vertical-align: middle;
}

.item-c {
  width: 94%;
  margin-left: 3%;
  height: 400rpx;
  line-height: 100rpx;
  font-size: 0.9rem;
  border-bottom: 1rpx solid #eee;
}

.item-c .checkbox {
  width: 33%;
  display: inline-block;
  font-size: 26rpx;
}

.item {
  width: 94%;
  margin-left: 3%;
  /* height: 100rpx; */
  line-height: 100rpx;
  font-size: 0.9rem;
  border-bottom: 1rpx solid #eee;
}

.item .item-tit::before {
  content: "* ";
  color: #fdad00;
}

.flex-between {
  display: flex;
  justify-content: space-between;
}

.h-auto {
  height: auto;
}

.item .item-input {
  float: right;
  font-size: 0.8rem;
  color: #808080;
  text-align: right;
  height: 100rpx;
  line-height: 100rpx;
  width: 350rpx;
}

.item .item-input-notice {
  width: 450rpx;
  height: 150rpx;
  line-height: 40rpx;
  color: #808080;
  text-align: left;
  padding: 10rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  margin: 20rpx 0;
}

.item .tags .item-input {
  margin: -5px 0;
}

.item .tags {
  width: 500rpx;
  float: right;
  overflow: hidden;
  display: flex;
  justify-content: flex-end;
  text-align: center;
  line-height: 50rpx;
  padding: 10rpx 0;
  flex-wrap: wrap;
}

.item .tags .tag {
  color: #808080;
  font-size: 26rpx;
  margin: 10rpx 5rpx;
  padding: 5rpx;
  border: 2rpx dotted #fdad00;
  border-radius: 20rpx;
  min-width: 130rpx;
  max-height: 50rpx;
  display: inline-block;
  position: relative;
}

.item .tag-del {
  display: inline-block;
  position: absolute;
  width: 25rpx;
  height: 25rpx;
  top: -8rpx;
  right: -2rpx;
}

.item .tags .tag-color {
  color: #fdad00;
}

.imgs {
  display: flex;
  justify-content: flex-start;
  width: 100%;
  height: 100%;
  padding: 0 5%;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.imgs-x {
  padding: 0;
}

.imgs-x .img-item {
  margin: 10rpx 0;
}

.imgs .img-item {
  width: 33%;
  margin: 10rpx 0;
  position: relative;
  text-align: center;
}

.imgs .img-item-title {
  color: #fdad00;
  font-size: 22rpx;
}

.imgs .img-del {
  width: 40rpx;
  height: 40rpx;
  border: 50%;
  position: absolute;
  right: 0;
  top: 35rpx;
}

.imgs .img-item-o {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
}

.imgs .img-item-x {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  border: 1rpx dotted #fdad00;
  box-sizing: border-box;
  font-size: 60rpx;
  color: #fdad00;
  line-height: 180rpx;
  text-align: center;
  margin: 10rpx auto 0;
}

.save {
  width: 90%;
  background: #fdad00;
  color: #fff;
  margin: 40rpx auto;
}