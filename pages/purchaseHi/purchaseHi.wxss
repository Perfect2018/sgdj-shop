/* pages/purchaseHi/purchaseHi.wxss */

.page {
  width: 100%;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}

.item {
  width: 100%;
  display: flex;
  font-size: 0.9rem;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.item .item-title {
  width: 300rpx;
  text-align: left;
  box-sizing: border-box;
}

.item .item-input {
  width: 100%;
  color: #808080;
  text-align: left;
  padding: 25rpx 0;
}

.save {
  width: 100%;
  background: #fdad00;
  color: #fff;
  margin-top: 40rpx;
}
