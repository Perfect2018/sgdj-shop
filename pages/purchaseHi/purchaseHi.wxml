<!--pages/purchaseHi/purchaseHi.wxml-->
<view class="page">
  <view class='item'>
    <view class="item-title">原价</view>
    <input class="item-input" value="{{originalPrice}}" disabled/>

    <view class="item-title">折扣价</view>
    <input class="item-input" value="{{currentPrice}}" bindinput='_currentPrice' placeholder='请输入商品现价' />
  </view>
  <view class='item'>
    <view class="item-title">折扣</view>
    <input class="item-input" value="{{discount+'折'}}" disabled/>
  </view>
  <button class="save" bindtap="_save">确定</button>
</view>