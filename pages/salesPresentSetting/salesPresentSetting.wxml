<!--pages/salesPresentSetting/salesPresentSetting.wxml-->
<view class="page">
  <view class='item'>
    <view class="item-title">买</view>
    <input class="item-input" value="{{form.count}}" bindinput='_count' placeholder='商品数量' />

    <view class="item-title">(份)</view>
    <input class="item-input" value="{{form.goods_name}}" bindinput='_goods_name' placeholder='输入商品' />
  </view>
  <view class='item'>
    <view class="item-title">赠</view>
    <input class="item-input" value="{{form.grant}}" bindinput='_grant' placeholder='商品名称及数量' />
  </view>
  <button class="save">确定</button>
</view>