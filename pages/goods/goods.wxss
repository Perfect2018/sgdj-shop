.goods_type .btn {
  width: 49%;
  text-align: center;
  border-radius: 50rpx;
  font-size: 26rpx;
  border: 2rpx solid #f1f1f1;
  background: #f1f1f1;
  color: #000;
  padding: 10rpx;
}

.goods_type .tit {
  font-size: 30rpx;
  font-weight: 800;
}

.goods_type .tit-sm {
  font-size: 24rpx;
}

.goods_type .active {
  /* border: none; */
  background: #fdad00;
  color: #fff;
  border-radius: 50rpx;
  border: 2rpx solid #999;
}

.goodsCount {
  line-height: 60rpx;
  color: #fff;
  font-size: 34rpx;
  position: relative;
}

.goodsDate {
  width: 90%;
  margin-left: 5%;
  color: #fff;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #fff;
}

.addGoods {
  position: absolute;
  right: 5%;
  border: 4rpx solid #fff;
  background: transparent;
  color: #fff;
  font-weight: bold;
}

.goods_classify {
  width: 100%;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  background-color: rgba(255, 173, 0, 0.7);
  color: #000;
  box-sizing: border-box;
  height: 80rpx;
}

.goods_classify::-webkit-scrollbar {
  display: none;
}

.goods_classify_list {
  width: max-content;
  min-width: 100%;
}

.goods_classify_item {
  box-sizing: border-box;
  border-bottom: 4rpx solid transparent;
  padding: 0 40rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  display: inline-block;
}

.goods_classify_item_active {
  font-weight: bold;
  background-color: #fdad00;
  border-bottom-color: #fff;
}

.goods_state {
  width: 100%;
  display: flex;
  justify-content: center;
}

.goods_state>text {
  width: 150rpx;
  text-align: center;
  font-size: 30rpx;
  padding: 15rpx 30rpx;
}

.active_goods_state {
  border-bottom: 4rpx solid #fdad00;
}

.goods-item {
  margin: 0 20rpx;
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}

.goodsLogo {
  width: 20%;
  margin-right: 20rpx;
  position: relative;
}

.goodsLogo .goods-item-tit {
  position: absolute;
  left: 0;
  top: 10rpx;
  background-color: #fdad00;
  color: #fff;
  font-size: 22rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  padding: 0 10rpx 0 5rpx;
}

.goodsLogo>image {
  width: 150rpx;
  height: 150rpx;
}

.goodsContent {
  width: 80%;
  box-sizing: border-box;
}

.operate {
  width: 100%;
  padding: 5rpx 0;
  height: 50rpx;
}

.operate .item-name {
  font-size: 28rpx;
  font-weight: bold;
  white-space: nowrap;
  height: 50rpx;
  width: 210rpx;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
}

.operate .btn {
  float: right;
  font-size: 0.8rem;
  box-sizing: border-box;
  width: max-content;
  text-align: center;
  padding: 5rpx 15rpx;
  margin: 0 5rpx;
  border: 1rpx solid #fdad00;
  background-color: #fff;
  color: #fdad00;
  border-radius: 10rpx;
}

.operate .btn-l {
  background-color: #fdad00;
  color: #fff;
}

.price {
  color: #fdad00;
  font-size: 28rpx;
  padding: 5rpx 0;
}

.sale {
  font-size: 28rpx;
  padding: 5rpx 0;
}

.sale .sale-item {
  margin-right: 60rpx;
}

/**搜索***/

.search-input {
  width: 75%;
  height: 60rpx;
  margin: 10rpx 0 10rpx 1%;
  padding: 0 10px;
  border: 1rpx solid #fdad00;
  border-radius: 10rpx 0 0 10rpx;
  font-size: 28rpx;
  background: #fff;
}

.search-button {
  background: #fdad00;
  color: #fff;
  width: 23%;
  right: 1%;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
  border-radius: 0 10rpx 10rpx 0;
  border-color: transparent;
}