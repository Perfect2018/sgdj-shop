.header {
  min-height: 310rpx;
}

.goods_type {
  box-sizing: border-box;
  width: 100%;
  margin: 20rpx 0;
  display: flex;
  justify-content: space-around;
  background-color: #f1f1f1;
  box-sizing: border-box;
}

.goods_type>view{
  margin: 5rpx;
  border-radius: 50rpx;
  width: 100%;
  /* padding: 20rpx 0; */
  display: flex;
  justify-content: space-around;
  border: 2rpx solid #999;
  box-sizing: border-box;
}

