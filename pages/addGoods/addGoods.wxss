/* pages/addGoods/addGoods.wxss */

.page {
  width: 100%;
  padding: 5rpx;
  box-sizing: border-box;
}

.item {
  width: 100%;
  display: flex;
  font-size: 0.8rem;
  justify-content: flex-start;
  border-bottom: 1rpx solid #eee;
}

.item .item-title {
  width: 300rpx;
  text-align: left;
  padding: 25rpx 10rpx;
  box-sizing: border-box;
}

.item .item-tit::before {
  content: "* ";
  color: #fdad00;
}

.item .item-input {
  width: 100%;
  color: #808080;
  text-align: left;
  padding: 25rpx 0;
}

.item .item-input-describe {
  width: 100%;
  height: 150rpx;
  color: #808080;
  text-align: left;
  padding: 10rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  margin: 20rpx 10rpx 20rpx 0;
}

.item-border {
  border-bottom: none;
}

.imgs {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  flex-wrap: wrap;
}

.imgs .img-item {
  width: 180rpx;
  margin: 10rpx;
  position: relative;
  text-align: center;
}

.imgs .img-item .img-item-title {
  color: #fdad00;
  font-size: 28rpx;
}

.imgs .img-item .img-del {
  width: 40rpx;
  height: 40rpx;
  border: 50%;
  position: absolute;
  right: -15rpx;
  top: 40rpx;
}

.imgs .img-item-o {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
}

.imgs .img-item-x {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  border: 4rpx dotted #fdad00;
  font-size: 60rpx;
  color: #fdad00;
  text-align: center;
  margin-top: 10rpx;
  line-height: 180rpx;
}

.note {
  color: #fdad00;
  font-weight: bold;
  font-size: 28rpx;
  text-align: center;
  margin-top: 20rpx;
}

.submit {
  margin: 30rpx 0;
}

.submit .save {
  width: 90%;
  margin-left: 5%;
  background: #fdad00;
  color: #fff;
  border-radius: 20rpx;
  margin-top: 40rpx;
}

.picker image{
  width: 16rpx;
  height: 10rpx;
  position: relative;
  top: -4rpx;
}

.select-date{
  height: 80rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  padding: 0 20rpx;
}